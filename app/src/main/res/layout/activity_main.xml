<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="서울_인텔 인공지능 인재 양성 과정 2기"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:drawableLeft="@drawable/btn0"
        android:hint="검색하기"
        android:paddingTop="20dp"
        android:textColorHint="@color/white"
        app:layout_constraintStart_toStartOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/btn1"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        app:layout_constraintLeft_toRightOf="@id/et_search" />

    <ImageButton
        android:id="@+id/ib_btn2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:src="@drawable/btn2"
        app:layout_constraintBottom_toBottomOf="@id/et_search"
        app:layout_constraintStart_toEndOf="@id/btn1" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:text="확인해주세요!"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search" />

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="5dp"
        android:text="# 공지사항"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_check" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="무엇이든 물어보세요!"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@id/tv_notice"
        app:layout_constraintTop_toBottomOf="@id/tv_notice" />

    <TextView
        android:id="@+id/tv_tofriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="5dp"
        android:text="# 동기에게-물어봐"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_question" />

    <TextView
        android:id="@+id/tv_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="100dp"
        android:text="열심히 교육받아요!"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="@id/tv_notice"
        app:layout_constraintTop_toBottomOf="@id/tv_notice" />

    <TextView
        android:id="@+id/tv_aicourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="5dp"
        android:text="# 인공지능-과정"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_study" />

    <TextView
        android:id="@+id/tv_appcourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="5dp"
        android:text="# 앱-과정"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_aicourse" />

    <TextView
        android:id="@+id/tv_projectblock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="5dp"
        android:text="# 프로젝트-과정"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_appcourse" />

    <TextView
        android:id="@+id/tv_friendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:text="친해져요!"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_projectblock" />

    <TextView
        android:id="@+id/tv_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="10dp"
        android:text="# 점심 추천해요"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_friendly" />

    <TextView
        android:id="@+id/tv_offtherecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="0dp"
        android:text="# 오프더레코드"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_lunch" />

    <TextView
        android:id="@+id/tv_infoshare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="10dp"
        android:text="# 정보 공유해요"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_offtherecord" />

    <TextView
        android:id="@+id/studyroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="showCategoryToast"
        android:paddingTop="30dp"
        android:text="스터디실"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_infoshare" />

</androidx.constraintlayout.widget.ConstraintLayout>